{
  "name": "sparky-agent",
  "version": "1.0.6",
  "description": "AI coding assistant for students built with Claude Sonnet 4.5",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sparky": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test:google-auth": "tsx src/auth/test-auth.ts",
    "test:google-calendar": "tsx src/tools/student/test-google-calendar.ts",
    "test:google-docs": "tsx src/tools/student/test-google-docs.ts"
  },
  "keywords": [
    "ai",
    "assistant",
    "claude",
    "student",
    "coding",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "google-auth-library": "^9.15.1",
    "googleapis": "^137.1.0",
    "ink": "^4.4.1",
    "open": "^10.2.0",
    "ora": "^7.0.1",
    "react": "^18.2.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "optionalDependencies": {
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/naman-goyall/Coding-Agent-for-Students"
  },
  "bugs": {
    "url": "https://github.com/naman-goyall/Coding-Agent-for-Students/issues"
  },
  "homepage": "https://github.com/naman-goyall/Coding-Agent-for-Students#readme"
}
